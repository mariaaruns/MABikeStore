@page "/Store"

<SectionContent SectionName="page-title">
    <MudChip T="string" Icon="@Icons.Material.Filled.Store" Size="Size.Large" Color="Color.Dark" IconColor="Color.Success">Stores</MudChip>
</SectionContent>



<MudCard>

    <MudCardContent>
        <MudGrid Spacing="1">
        <MudItem xs="12" sm=6 md="3">
        <MudTextField  @bind-Value="@storeName" Label="StoreName" Variant="Variant.Outlined"></MudTextField>
         </MudItem>
            <MudItem xs="12" sm=6 md="3">
        <MudTextField  @bind-Value="@storeName" Label="City" Variant="Variant.Outlined"></MudTextField>
         </MudItem >
        </MudGrid>
    </MudCardContent>
    <MudCardActions >
        <MudButton StartIcon="@Icons.Material.Filled.Search" Variant="Variant.Filled" Class="m-1" Color="Color.Primary">Search</MudButton>
        <MudButton StartIcon="@Icons.Material.Filled.Clear" Variant="Variant.Filled" Color="Color.Default">Clear</MudButton>
    </MudCardActions>

    <MudTabs Elevation="2" Rounded="true" Centered="true">
        <MudTabPanel Text="Active" BadgeData='"S"'>
            <MudText>This is Active </MudText>
            <StoreDataGrid Status="Active"></StoreDataGrid>
        </MudTabPanel>
        <MudTabPanel Text="Inactive" BadgeData='"..."' BadgeColor="Color.Dark" >
            <MudText>This is In Active </MudText>
            <StoreDataGrid Status="Inactive"></StoreDataGrid>
        </MudTabPanel>
        <MudTabPanel Text="Not Opened" BadgeData='"N"' />

    </MudTabs>

</MudCard>
@code {
    private string storeName { get; set; }
}
